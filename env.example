# Configurações do Banco de Dados
DATABASE_URL="postgresql://username:password@localhost:5433/tapago"

# Configurações do NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Configurações do Asaas
ASAAS_API_KEY="your-asaas-api-key-here"
ASAAS_ENVIRONMENT="sandbox"  # ou 'production' para produção
ASAAS_WEBHOOK_TOKEN="your-webhook-token-here"
ASAAS_CUSTOMER_ID="your-customer-id-here"

# Configurações de Pagamento
MONTHLY_AMOUNT="100.00"
PAYMENT_TIMEOUT_MINUTES="30"

# Configurações do PIX (mantido para compatibilidade)
PIX_KEY="your-pix-key-here"
PIX_MERCHANT_NAME="TaPago"
PIX_MERCHANT_CITY="São Paulo"
PIX_DESCRIPTION="TaPago - Mensalidade"

# Webhook Secret
WEBHOOK_SECRET="your-webhook-secret-here"

# Configurações de Email (opcional)
EMAIL_FROM="noreply@tapago.com"
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
